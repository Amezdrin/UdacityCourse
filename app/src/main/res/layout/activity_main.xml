<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.artemtrue.justjava.MainActivity"
        >

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/name_input_field"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/name_input_field"
            android:inputType="textCapWords"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toppings"
            android:textAllCaps="true"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:id = "@+id/toppings"
            android:layout_marginBottom="16dp"
            />

            <CheckBox
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whip_checkbox"
                android:textSize="16sp"
                android:paddingLeft="24dp"
                android:id="@+id/whip_checkbox"
            />

            <CheckBox
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choco_checkbox"
                android:textSize="16sp"
                android:paddingLeft="24dp"
                android:id="@+id/choco_checkbox"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Quantity"
            android:textAllCaps="true"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:id = "@+id/ordertext"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textAllCaps="true"
                android:layout_marginLeft="16dp"
                android:id = "@+id/decrease_btn"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:onClick="decreaseValue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="8dp"
                android:id = "@+id/quantity_text_view"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textAllCaps="true"
                android:layout_marginLeft="8dp"
                android:id = "@+id/increase_btn"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:onClick="increaseValue"
                />

            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OrderSummary"
            android:textAllCaps="true"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:id = "@+id/pricetext"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:id = "@+id/order_summary_text_view"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SumbitOrder"
            android:textAllCaps="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:id = "@+id/button"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:onClick="submitOrder"
            />

    </LinearLayout>
</ScrollView>